<div class="row">
    <div class="col-sm-6 mx-auto">
        <div class="form-block">
            <h1>Sign up to get started</h1>
            <% include ../partials/messages %>
            <div class="form-body">
                    <form action="/users/register" method="POST">
                        <div class="form-row">
                                <div class="form-group col-md-6">
                                  <label for="name">Name</label><br />
                                  <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name" value="<%= typeof name != 'undefined' ? name : '' %>"/>
                                </div>

                                <div class="form-group col-md-6">
                                  <label for="email">Email</label><br />
                                  <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" value="<%= typeof email != 'undefined' ? email : '' %>"/>
                                </div>

                                <div class="form-group col-md-6">
                                  <label for="level">Level</label><br />
                                  <select id="level" name="level" class="form-control" placeholder="Your level">
                                        <option value="Junior">Junior</option>
                                        <option value="Senior">Senior</option>
                                  </select>
                                </div>

                                <div class="form-group col-md-6">
                                  <label for="github_link">Github Link</label><br />
                                  <input type="github_link" id="github_link" name="github_link" class="form-control" placeholder="Enter Github Link" value="<%= typeof github_link != 'undefined' ? github_link : '' %>"/>
                                </div>

                                <div class="form-group col-md-6">
                                  <label for="avatar">Profile picture</label><br />
                                  <input type="file" id="avatar" name="avatar" class="form-control" placeholder="Profile picture" value="<%= typeof avatar != 'undefined' ? avatar : '' %>"/>
                                </div>

                                <div class="form-group col-md-6">
                                  <label for="password">Password</label>
                                  <input type="password" id="password" name="password" class="form-control" placeholder="password" value="<%= typeof password != 'undefined' ? password : '' %>"/>
                                </div>
                        </div>
                    
                              <div class="actions form-group">
                                 <button type="submit" class="btn">
                                    Register
                                 </button>
                              </div>
                              
                    </form>
                    <p class="lead mt-4">Have An Account? <a href="/users/login">Login</a></p>
            </div>
        </div>
    </div>
</div>
       